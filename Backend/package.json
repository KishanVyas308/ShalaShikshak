{
  "name": "shala-shikshak-backend",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:seed": "tsx src/seed.ts",
    "db:reset": "prisma migrate reset --force",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:db-only": "docker-compose up -d postgres",
    "docker:reset": "docker-compose down -v && docker-compose up -d",
    "setup": "npm run docker:up && sleep 5 && npm run db:migrate && npm run db:seed",
    "dev:docker": "npm run docker:db-only && sleep 5 && npm run db:migrate && npm run dev"
  },
  "keywords": [
    "education",
    "e-learning",
    "shala-shikshak"
  ],
  "author": "",
  "license": "ISC",
  "description": "Backend API for Shala Shikshak educational platform",
  "dependencies": {
    "@prisma/client": "^5.15.0",
    "@types/uuid": "^10.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.14.10",
    "nodemon": "^3.1.4",
    "prisma": "^5.15.0",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3"
  }
}
